@model IC_ebilet.pl.ViewModel.UserViewModel

@{
    ViewBag.Title = "Start";
}

</br>
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#Register">Zarejestruj się</button>
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#LogIn">Logowanie</button>


<div id="LogIn" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Logowanie</h4>
            </div>
            <div class="modal-body">

                @using (Html.BeginForm("LogIn", "Start", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {                        @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nick, htmlAttributes: new { @class = "control-label col-md-1", @style = "padding-top: 15px; color:rgb(255, 255, 255);" })
                            <div class="col-md-11">
                                @Html.EditorFor(model => model.Nick, new { htmlAttributes = new { @class = "textbox", placeholde = "Email" } })

                                @Html.ValidationMessageFor(model => model.Nick, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-1", @style = "padding-top: 15px; color:rgb(255, 255, 255);" })
                            <div class="col-md-11">
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "textbox", placeholde = "Email" } })

                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>




                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Nick, new { @class = "form-control", @id = "Nick", @placeholder = "Nick" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "Password", @placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group">
                            <input class="btn btn-primary" type="submit" name="submit" value="Zaloguj">
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div id="Register" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Rejestracja</h4>
            </div>
            <div class="modal-body">

                @using (Html.BeginForm("Register", "Start", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {                        @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Nick, new { @class = "form-control", @id = "Nick", @placeholder = "Nick" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "Password", @placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group">
                            <input class="btn btn-primary" type="submit" name="submit" value="Zarejestruj">
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("UsersTable", "Start", FormMethod.Post))
{
    <input class="btn btn-info" type="submit" value="Cała lista" />
}